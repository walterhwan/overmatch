{
  "extends": [
    "eslint:recommended"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    "no-console": 'off',
    "comma-dangle": [1, "always-multiline"],
    "no-underscore-dangle" : 0,
    "max-len": [1, 180, 4],
    "arrow-body-style": [0],
    "react/jsx-no-bind": [0],
    "import/no-unresolved": [0] // Until import plugin supports webpack 2 resolveModules
  }
}
